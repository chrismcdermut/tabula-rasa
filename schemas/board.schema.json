{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kanban Board",
  "description": "Board containing tasks organized in columns",
  "type": "object",
  "required": ["id", "name", "columns"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "Display name of the board"
    },
    "description": {
      "type": "string",
      "description": "Purpose and scope of this board"
    },
    "projectId": {
      "type": "string",
      "description": "Parent project ID"
    },
    "columns": {
      "type": "object",
      "required": ["backlog", "in-progress", "blocked", "done"],
      "properties": {
        "backlog": {
          "$ref": "#/definitions/column"
        },
        "in-progress": {
          "$ref": "#/definitions/column"
        },
        "blocked": {
          "$ref": "#/definitions/column"
        },
        "done": {
          "$ref": "#/definitions/column"
        }
      },
      "additionalProperties": {
        "$ref": "#/definitions/column"
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        },
        "owner": {
          "type": "string"
        }
      }
    }
  },
  "definitions": {
    "column": {
      "type": "object",
      "required": ["name", "tasks"],
      "properties": {
        "name": {
          "type": "string"
        },
        "wip_limit": {
          "type": "number",
          "description": "Work in progress limit"
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "task.schema.json"
          }
        }
      }
    }
  }
}